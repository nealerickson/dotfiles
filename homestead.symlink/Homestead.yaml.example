---
ip: "192.168.10.20"
memory: 2048
cpus: 1
provider: virtualbox

authorize: ~/.ssh/id_rsa.pub

keys:
    - ~/.ssh/id_rsa

folders:
    - map: ~/Code
      to: /home/vagrant/Code

sites:
    - map: homestead.app
      to: /home/vagrant/Code/Laravel/public
    - map: heedworks.dev
      to: /home/vagrant/Code/Clients/Heedworks/heedworks-web/public

databases:
    - homestead
    - heedworks_dev

